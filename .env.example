# ===========================================
# AI Restaurant Platform - Environment Config
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env with real credentials!

# ------------------------------------------
# Database (Required)
# ------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/restaurant_platform?schema=public"
# For connection pooling (e.g., Supabase):
# DIRECT_URL="postgresql://..."

# ------------------------------------------
# NextAuth.js v5 (Required)
# ------------------------------------------
NEXTAUTH_URL="http://localhost:3000"
# Generate a strong secret with: openssl rand -base64 32
# IMPORTANT: Use a unique, random value in production!
AUTH_SECRET="generate-a-32-char-random-secret-here"

# ------------------------------------------
# Security Settings
# ------------------------------------------
# Demo authentication (development only)
# WARNING: Never set to "true" in production!
# Demo auth is automatically enabled when NODE_ENV=development
ENABLE_DEMO_AUTH="false"

# ------------------------------------------
# AI Provider - Claude (Optional)
# ------------------------------------------
ANTHROPIC_API_KEY=""

# ------------------------------------------
# Real-time - Pusher (Optional)
# ------------------------------------------
# Get credentials from https://pusher.com
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER="eu"
NEXT_PUBLIC_PUSHER_KEY=""
NEXT_PUBLIC_PUSHER_CLUSTER="eu"

# ------------------------------------------
# Payment Gateway - iyzico (Optional)
# ------------------------------------------
# Get credentials from https://iyzico.com
# IYZICO_API_KEY=""
# IYZICO_SECRET_KEY=""
# IYZICO_BASE_URL="https://sandbox-api.iyzipay.com"

# ------------------------------------------
# File Upload (Optional)
# ------------------------------------------
# Uploadthing: https://uploadthing.com
# UPLOADTHING_SECRET=""
# UPLOADTHING_APP_ID=""

# Cloudinary: https://cloudinary.com
# CLOUDINARY_URL=""

# ------------------------------------------
# Rate Limiting (Optional)
# ------------------------------------------
# Redis URL for distributed rate limiting
# REDIS_URL="redis://localhost:6379"
# UPSTASH_REDIS_REST_URL=""
# UPSTASH_REDIS_REST_TOKEN=""

# ------------------------------------------
# Subdomain Configuration (Multi-tenancy)
# ------------------------------------------
# Root domain for subdomain routing
# Development: "localhost:3000" (uses path-based routing)
# Production: "yourdomain.com" (uses subdomain routing)
NEXT_PUBLIC_ROOT_DOMAIN="localhost:3000"

# Protocol (http for localhost, https for production)
NEXT_PUBLIC_PROTOCOL="http"

# Example production setup:
# NEXT_PUBLIC_ROOT_DOMAIN="restoai.com"
# NEXT_PUBLIC_PROTOCOL="https"
# This enables:
#   - demo-kafe.restoai.com → Customer menu
#   - panel.restoai.com → Restaurant panel
#   - admin.restoai.com → Platform admin
